package principal;

public class Aniversario extends CartaoWeb {
	private String Data;
	
	public Aniversario (String destinatario, String Data) {
		setDestinatario (destinatario);
		this.Data = Data;
	}

	public String getData() {
		return Data;
	}

	public void setData(String data) {
		this.Data = data;
	}
	
	public String showMessage(String remetente) {
		return "Para: " + getDestinatario() + "\nQue Deus continue te abençoando com muita paz, saúde e felicidades. Feliz Aniversario!!! " + "\nDe: " + remetente +"\n"+ this.Data;
		  
	}
}

