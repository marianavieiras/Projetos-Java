package principal;

public class DiaDosNamorados extends CartaoWeb{
	
	private String Data;
		
	public DiaDosNamorados (String destinatario, String Data) {
		setDestinatario (destinatario);
		this.Data = Data;
	}

	public String getData() {
		return Data;
	}

	public void setData(String data) {
		this.Data = data;
	}
	
	public String showMessage(String remetente) {
		return "Para: " + getDestinatario() + "\nFeliz dia dos Namorados e não esqueça de lavar a louça hoje, Te amo!!" + "\nDe: " + remetente +"\n"+ this.Data;
		  
	}
}